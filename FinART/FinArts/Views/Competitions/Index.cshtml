@model IEnumerable<FineArt.Models.Data.Competition>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body">
                        <h4>Events Details</h4>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New</a>
</p>
 <div class="card-body horizontal-scroll-container">

   <table class="table scroll-item">
       <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conditions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwardDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMG)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conditions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardDetails)
            </td>
            <td>
                    <img src="~/Content/Images/@item.IMG" width="80" height="80" />
            </td>
            <td> 
                @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
                  {
                                              
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.CId">Edit</a> 
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CId">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CId">Delete</a>
                  }
                  else{
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CId">Details</a> 
                   }
            </td>
        </tr>
}
    </tbody>
</table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>