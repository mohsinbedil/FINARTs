@model FineArt.Models.Data.Competition
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body">
                        <h4 class="card-title">Add Competition Details</h4>

                        <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-3 col-form-label">Event Name</label>
                                <div class="col-sm-9">
                                    <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername2" placeholder="Event Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="StartDate" for="exampleInputEmail2" class="col-sm-3 col-form-label">Starting Date</label>
                                <div class="col-sm-9">
                                    <input asp-for="StartDate" type="date" class="form-control" id="exampleInputEmail2" placeholder="Starting From">
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="EndDate" class="col-sm-3 col-form-label">End Date</label>
                                <div class="col-sm-9">
                                    <input asp-for="EndDate" type="date" class="form-control" placeholder="Ending">
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Conditions" class="col-sm-3 col-form-label">Condition</label>
                                <div class="col-sm-9">
                                    <input asp-for="Conditions" type="text" class="form-control" id="exampleInputMobile" placeholder="Condition">
                                    <span asp-validation-for="Conditions" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="AwardDetails" class="col-sm-3 col-form-label">Award Details</label>
                                <div class="col-sm-9">
                                    <input asp-for="AwardDetails" type="text" class="form-control"  placeholder="Award Name">
                                    <span asp-validation-for="AwardDetails" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="IMG" class="col-sm-3 col-form-label">Event Pic</label>
                                <div class="col-sm-9">
                                    <input asp-for="Pic" type="file" class="form-control"  placeholder="Image">
                                    <span asp-validation-for="Pic" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a class=" btn btn-secondary" asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->

</div>
     
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
