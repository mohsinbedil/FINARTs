@model FineArt.Models.Data.Award

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body ">
<h4>Create Awards</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stud_Name" class="control-label"></label>
                <input asp-for="Stud_Name" class="form-control" />
                <span asp-validation-for="Stud_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition_Name" class="control-label"></label>
                <select asp-for="Competition_Name" class="form-control" asp-items="@(new SelectList(ViewBag.Competitions, "Value", "Text"))">
                 <option disabled selected>-- Select Competition --</option>
                   </select>
                <span asp-validation-for="Competition_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwardDetails" class="control-label"></label>
                 <input asp-for="AwardDetails" class="form-control" />
                 <span asp-validation-for="AwardDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
