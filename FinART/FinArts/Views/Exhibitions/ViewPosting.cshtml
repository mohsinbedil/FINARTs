@model IEnumerable<FineArt.Models.Data.ExhibitionPosting>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body ">
                        <h4 class="card-title">Exhibition Postings</h4>

                         @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
                         {
                        <p>
                            <a class="btn btn-secondary" asp-action="Addposting">Addposting</a>
                        </p>
                         }
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PaintingTitle)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsSold)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsPaidToStudent)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AmountPaid)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EPIMG)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaintingTitle)
                                        </td>
                                        <td>
                                            $@Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsSold)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsPaidToStudent)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AmountPaid)
                                        </td>
                                        <th>
                                            <img src="~/Content/Images/@item.EPIMG" width="100" height="100">
                                        </th>
                                        <td>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
                                            {
                                                <a class="btn btn-info" asp-action="Editposting" asp-route-id="@item.ExPID">Edit</a>
                                                <a class="btn btn-secondary" asp-action="DeletePosting" asp-route-id="@item.ExPID">Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
