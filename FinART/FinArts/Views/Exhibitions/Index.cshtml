@model IEnumerable<FineArt.Models.Data.Exhibition>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body ">
                        <h4 class="card-title">Exhibition Details</h4>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.ExhibitionIMG)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <img src="~/Content/Images/@item.ExhibitionIMG" /> 
            </td>
            <td>
                @if(User.IsInRole("Staff")){
                <a asp-action="Edit" asp-route-id="@item.Exid">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Exid">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Exid">Delete</a>
                }
                @if(User.IsInRole("Admin")){
                <a asp-action="Edit" asp-route-id="@item.Exid">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Exid">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Exid">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
</div>
                 
</div>
</div>
</div>
</div>
</div>