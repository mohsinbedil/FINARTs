@model FineArt.Models.Data.Staff

      

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body">
                        <h4 class="card-title">Staff Registration Form</h4>

                        <form class="pt-3" asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="SName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Name">
                                <span asp-validation-for="SName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="Email" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <select asp-for="Gender" class="form-control form-control-lg" id="exampleFormControlSelect2" placeholder="Gender">
                                    <option disabled selected>Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input asp-for="classes" type="Text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Assigned Class">
                                <span asp-validation-for="classes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <select asp-for="Subject" class="form-control form-control-lg" id="exampleFormControlSelect2" placeholder="Gender">
                                        <option disabled selected>--Subjects--</option>
                                        <option>Painting</option>
                                        <option>Sculping</option>
                                        <option>Crafting</option>
                                        <option>Sketching</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mt-3">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                                <a class=" btn btn-secondary" asp-action="Index">Back to List</a>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
    <!-- content-wrapper ends -->

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
