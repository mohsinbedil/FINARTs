@model IEnumerable<FineArt.Models.Data.Submission>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body ">
                        <h4>Submited designs </h4>

                        <p>
                            <a class="btn btn-secondary" asp-action="Create">Create New</a>
                        </p>
                        <div class="card-body horizontal-scroll-container">

                            <table class="table scroll-item">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Compet_Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Stud_Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SubmissionDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Marks)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FeedBack)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DIMG)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Compet_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Stud_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SubmissionDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Marks)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FeedBack)
                                            </td>
                                            <td>
                                                <img src="~/Content/Images/@item.DIMG" width="80" height="80" />
                                            </td>
                                            <td>
                                                @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Staff"))
                                                {
                                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Remarks</a>
                                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
