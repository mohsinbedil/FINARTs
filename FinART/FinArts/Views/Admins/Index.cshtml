@model FineArt.ViewModels.GetModels

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card mx-auto">
                    <div class="card-body ">
                        <h4 class="card-title">Staff Details</h4>
                        <p>
                            <a class="btn btn-secondary" asp-controller="Staffs" asp-action="Create">Create New</a>
                        </p>
                        <div class="card-body horizontal-scroll-container">

                            <table class="table scroll-item">
                                <thead>
                                    <tr>
                                        <th>
                                            SName
                                        </th>
                                        <th>
                                            Gender
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Password
                                        </th>
                                        <th>
                                            classes
                                        </th>
                                        <th>
                                            Subject
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Staffs)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Password)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.classes)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Subject)
                                            </td>
                                            <td>
                                                <a class="btn btn-info " asp-controller="Staffs" asp-action="Edit" asp-route-id="@item.SID">Edit</a> |
                                                <a class="btn btn-secondary " asp-controller="Staffs" asp-action="Details" asp-route-id="@item.SID">Details</a> |
                                                <a class="btn btn-danger " asp-controller="Staffs" asp-action="Delete" asp-route-id="@item.SID">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
